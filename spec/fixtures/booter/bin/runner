#!/usr/bin/env ruby

require 'rubygems'
begin
  require 'messed'
rescue LoadError
  if ENV['MESSED_HOME']
    require File.join(ENV['MESSED_HOME'], 'lib', 'messed')
  else  
    raise("no messed!")
  end
end

require 'thor'

$root = File.expand_path(File.join(File.dirname(__FILE__), '..'))

Messed::Tasks::Runner.start

RunnerTask.start

